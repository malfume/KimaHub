local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

local Window = Rayfield:CreateWindow({
   Name = "KuroHub",
   LoadingTitle = "Buy Key",
   LoadingSubtitle = "by Sirius",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "KuroHub"
   },
   Discord = {
      Enabled = false,
      Invite = "ABCD", -- The Discord invite code, do not include discord.gg/
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },
   KeySystem = false, -- Set this to true to use our key system
   KeySettings = {
      Title = "KuroHub",
      Subtitle = "Key System",
      Note = "Join the discord (discord.gg/Ek7u7g37)",
      FileName = "KuroKey",
      SaveKey = true,
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = "kiro"
   }
})


local Tab = Window:CreateTab("main", 4483362458) -- Title, Image
local Section = Tab:CreateSection("main Stuff")
local Button = Tab:CreateButton({
   Name = "Button Example",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/malfume/KimaHub/main/KimaHub",true))();
   end,
})


Rayfield:LoadConfiguration()
